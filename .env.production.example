# Hisham Traders ERP - Production Environment Variables
# Copy to .env.production and fill in actual values
# DO NOT commit sensitive values to git

# ============================================================================
# Database (Railway MySQL)
# ============================================================================
# Use Railway variable reference: ${{MySQL.DATABASE_URL}}
# Or set individually:
DATABASE_URL=mysql://username:password@hostname:3306/hisham_erp

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# ============================================================================
# Frontend Configuration
# ============================================================================
# Use Railway variable reference: https://${{hisham-api.RAILWAY_PUBLIC_DOMAIN}}/api/v1
VITE_API_URL=https://your-api-domain.com/api/v1

# ============================================================================
# Environment (DO NOT CHANGE)
# ============================================================================
# These should match deployment environment
ENV_NAME=production
BUILD_TIME=2024-01-15T00:00:00Z
GIT_COMMIT=main
VERSION=1.0.0

# ============================================================================
# Optional: Monitoring & Error Tracking
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key

# ============================================================================
# Optional: Email/Notifications
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@hishamtraders.com

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# Rate Limiting
# ============================================================================
# Requests per minute per IP
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_MAX_AGE=86400000

# ============================================================================
# Security
# ============================================================================
# Use HTTPS in production
SECURE_COOKIES=true
SECURE_HEADERS=true
